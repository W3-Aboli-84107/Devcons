<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textAlignment="center"
        android:textColor="#F2EDED"
        android:textSize="38sp"
    android:textStyle="bold" />

    <ImageView
        android:id="@+id/visitorImage"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/office"
    android:contentDescription="Visitor Image"
    android:layout_marginBottom="16dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/custom_edittext"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        app:cardElevation="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/username"
                android:drawableLeft="@drawable/name"
                android:text="Visitor Name"
                android:drawablePadding="8dp"
                android:background="@drawable/custom_edittext"
                android:padding="8dp"
                android:textColor="@color/black"
                android:hint="UserName"
                android:textColorHighlight="@color/purple" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/mail"
                android:drawableLeft="@drawable/mail"
                android:text="Mail ID"
                android:drawablePadding="8dp"
                android:background="@drawable/custom_edittext"
                android:padding="8dp"
                android:textColor="@color/black"
                android:hint="mail"
                android:layout_marginTop="10dp"
                android:textColorHighlight="@color/purple" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/mobile"
                android:drawableLeft="@drawable/mobile"
                android:text="Mobile No"
                android:drawablePadding="8dp"
                android:background="@drawable/custom_edittext"
                android:padding="8dp"
                android:textColor="@color/black"
                android:hint="mobileno"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:textColorHighlight="@color/purple" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/intime"
                android:text="In Time"
                android:drawablePadding="8dp"
                android:background="@drawable/custom_edittext"
                android:padding="8dp"
                android:textColor="@color/black"
                android:hint="intime"
                android:layout_marginTop="10dp"
                android:textColorHighlight="@color/purple"
                android:focusable="false"
                android:clickable="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/outtime"
                android:text="Out Time"
                android:drawablePadding="8dp"
                android:background="@drawable/custom_edittext"
                android:padding="8dp"
                android:textColor="@color/black"
                android:hint="outtime"
                android:layout_marginTop="10dp"
                android:textColorHighlight="@color/purple"
                android:focusable="false"
                android:clickable="true" />




            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/submit"
                android:text="Save"
                android:textSize="23sp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/purple"
            android:layout_margin="35dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
