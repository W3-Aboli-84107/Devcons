<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Visitor's name input field -->
    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="textPersonName"
        android:minHeight="48dp" /> <!-- Ensure minimum touch target -->

    <!-- Visitor's email input field -->
    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp" /> <!-- Ensure minimum touch target -->

    <!-- Visitor's mobile number input field -->
    <EditText
        android:id="@+id/edit_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile"
        android:inputType="phone"
        android:minHeight="48dp" /> <!-- Ensure minimum touch target -->

    <!-- Visitor's in-time input field -->
    <EditText
        android:id="@+id/edit_intime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="In Time"
        android:focusable="false"
        android:clickable="true"
        android:minHeight="48dp" /> <!-- Ensure minimum touch target -->

    <!-- Visitor's out-time input field -->
    <EditText
        android:id="@+id/edit_outtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Out Time"
        android:focusable="false"
        android:clickable="true"
        android:minHeight="48dp" /> <!-- Ensure minimum touch target -->

    <!-- Save button -->
    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="20dp"
        android:minHeight="48dp"
        android:minWidth="160dp" /> <!-- Ensure minimum touch target size -->

    <!-- Cancel button -->
    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginTop="10dp"
        android:minHeight="48dp"
        android:minWidth="160dp" /> <!-- Ensure minimum touch target size -->

</LinearLayout>
